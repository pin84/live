body
  font-size 1.2rem
  font-family: 'Microsoft Yahei'
p
  margin 0
  padding 0

.container
  position relative
  overflow  hidden
  width 50rem
  height 40rem
  margin 10rem auto
  // border 1px solid red
  background-color #f0f0f0
  ul.tabs
    width 100%
    height 3.5rem
    background-color #ccc
    li
      position relative
      float left
      padding 0 2rem
      color #fff
      cursor pointer
      height 3.5rem
      line-height: 3.5rem
      z-index 1
  .slider
    position absolute
    top 0
    left 0
    width 8rem
    height 3.5rem
    background-color rgba(232,132,125,0.79)
    transition 1s

  .contents
    width 400%
    height 16.5rem
    transform translateX(0px)
    transition 1s
    // margin-top 2rem
    li
      float left
      width 50rem
      height 100%
      background-color rgba(111,176,162,0.7)
      font-size 1.4rem
      color #fff
      p
        padding 1rem
        text-indent 2em
      &:nth-of-type(2)
        background-color rgba(239,131,144,0.73)
      &:nth-of-type(3)
        background-color rgba(204,184,239,0.73)




