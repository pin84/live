.navbar
  width 100%
  background #fff
  .container
    width 80%
    margin 0 auto
    box-sizing border-box
    // padding 0 2rem
    // border: 1px solid red
    display flex
    justify-content space-between
    .logo
      margin-top 1rem
      width 25rem
      img
        width 100%
      span
        position absolute
        top 60px 
        left 60px
    .nav-link
      ul
       display flex
       li
        position relative
        display flex
        flex-direction column 
        font-size 1.5rem
        white-space nowrap
        transition .5s
        border-top 3px solid transparent
        // text-align: center
        &.active
          background #f1f1f1
          border-top 3px solid #9d426b
        &:hover
          background-color #9d426b
          a 
            color #fff
        .icon
          // display inline-block
          position absolute
          left 50%
          margin-left -0.6rem
          top 1rem
          width 1.2rem
          height 1.2rem
        a
          color #333
          padding 3rem 2rem 1.5rem 2rem


