body
  background #efeff1
.main
  width 80%
  margin 0 auto
  display flex
  .server-range
    flex-basis 17rem
    .title
      padding 4rem 0 1.5rem 1rem
      display flex
      background #dedede
      .title-left
        font-size 7rem
        margin-top -13px
      .title-right
        margin-left 5px
        h2
          font-size 2.5rem
          letter-spacing 5px
        span
          font-size 2rem  
    .list
      font-size 1.4rem
      color #565656
      li
        border-top 1px solid #fff
        display inline-block
        width 204px
        height 36px
        line-height 36px
        position relative
        .icon
          display inline-block
          width 18px
          height 18px
          margin-bottom -6px
          margin-left -4.5px
        a
          display block
          // width 130px
          height 100%
          padding 0 25px 0 52px
          color #565656
          position relative
          background #e5e4e3
          &.active
            width 144px
            height 48px
            background url(../../images/business/on.gif)
            color #fff
          &:hover
            width 144px
            height 48px
            background url(../../images/business/on.gif)
            color #fff
  .detail-list
    width 100%
    border 1px solid red
    margin-left 3rem