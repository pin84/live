.foot-top
  width 100%
  border-bottom: 1px solid #e5e4e2;
  border-top: 1px solid #e5e4e2;
  margin 2rem 0
  padding 0 2rem
  box-sizing border-box
  .foot-top-content
    width 80%
    margin 0 auto 
    display flex
    padding 3rem 0
    justify-content space-between
    align-items center
    position relative
    .follow
      display flex
      ul
        display flex
        li
          margin-left 2rem
          &:hover
            cursor pointer
          .weixin, .weibo, .qq, .mail
            width 3.2rem
            height 3.2rem
      span
        word-break:  normal
        font-size 1.8rem
        margin-top .5rem
        margin-right 2rem
      // font-weight 600
    .search
      position absolute
      right 0
      width 50%
      font-size 0
      .input, .submit
        outline none
        font-size 1.6rem
        // border none
        border 1px solid #e5e4e2
      .input
        padding 1rem
        width 70%
        border-right none
      .submit
        background #0f0f0f
        color #fff
        padding 1.1rem 1.5rem
        &:hover
          opacity .8
          cursor pointer



