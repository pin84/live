*
  margin 0
  padding 0


.photo_wall
  width 100%
  height 600px
  background url(../../../common/img/imgCartoon/bg.jpg) no-repeat center center
  background-size cover
  position relative
  overflow hidden
  .photo
    width 100%
    height 100%
    top 0
    left 0
    position absolute
    // z-index 1
    .photo_i
      width 336px
      height 392px
      position absolute
      left 50%
      top 50%
      transition 800ms
      perspective 750px
      transform translate(-50%,-50%) scale(1) rotate(0deg)
      &.center
        left 50%
        top 50%
        transform translate(-50% ,-50%) scale(1) rotate(0deg)
        z-index 9999
      &.front .photo_3d
        transform rotateY(0deg)
      &.back .photo_3d
        transform translateX(100%) rotateY(-180deg)
      .photo_3d
        transform-style preserve-3d
        transition 500ms
        transform-origin 0 50%
        .photo_side
          width 336px
          height 392px
          position absolute
          left 0
          top 0
          background #fff
          padding 26px 24px
          box-sizing border-box
          border-radius 6px
          &.photo_front
            transform rotateY(0deg)
            p
              width 286px
              height 286px
              border 2px solid #d8536d
              overflow hidden
              img
                width 100%
            h3
             width 166px
             height 44px
             font 16px/44px Arial
             background #d8356d
             margin 0 auto
             text-align center
             border-radius 0 0 5px 5px
          &.photo_back
            transform rotateY(-180deg)
            p
              color #d8356d
              font 14px/22px Arial
    .nav
      width 100%
      height 190px
      position absolute
      top 0
      left 0
      background -webkit-linear-gradient(top,rgba(0,0,0,.5),transparent)
      text-align center
      .nav_i
        width 30px
        height 30px
        display inline-block
        border-radius 50%
        transform scale(.4)
        cursor pointer
        transition 500ms
        background url(../../../common/img/icon/shape_38.png)   no-repeat center rgba(255,255,255,.5)
        background-size 0 0
        &.active
          background-color rgba(255,255,255,1)
          transform scale(.6)
          background-size 20px 20px
        &.back
          background-color rgba(255,255,255,1)
          transform scale(.5) rotateY(-180deg)
          background-size 20px 20px

  .shade
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    background rgba(255,255,255,.7)
    display flex
    align-items center
    justify-content center
    z-index 2
    .start
      width 200px
      height 50px
      border 2px solid #d8356d
      border-radius 10px
      background rgba(255,190,255,.3)
      text-align center
      font 22px/50px Arial
      cursor pointer
  &.hide
    transition 800ms
    transform scale(0) rotateY(360deg)
